<ul>
  <% products.forEach((ele,i)=> { %>

    <li>
      <img src="<%= ele.pic %>" class="card-img-top " style="height: 250px; width:200px;" alt="...">
      <br> <br>
      <p><a href="/products/<%=ele._id%> "> Go to the product <%=ele.nameP %> </a></p>

      <p>Category: <%=ele.category %>
      </p>
      <p>Price: <%=ele.price %>
      </p>
      <p>Description <%=ele.description %>
      </p>

      <br>
      <a href="/products/<%= ele._id %>/edit">EDIT</a>
